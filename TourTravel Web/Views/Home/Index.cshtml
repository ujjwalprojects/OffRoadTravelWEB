                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 col-md-7   float-right">
            <div class="peulis-slide owl-carousel">
                @foreach (var item in ViewBag.BannerList)
                {
                    <div class="slider-container">
                        <div class="single-slider zoom">
