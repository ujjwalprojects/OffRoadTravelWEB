@model TourTravel_Web.Areas.Admin.CustomModels.PackageOfferVM
@{
    ViewBag.Title = "PackageOfferList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="title-div">
    <i class="fa fa-hand-o-right"></i>&nbsp;
    <span class="title">Package Offer</span>&nbsp;
    <small>List</small>
</div>
<div class="card bg-light">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="get" action="/admin/Package/PackageOfferList" data-search="true" data-otf-ajax="true" data-otf-target="#DataGrid" id="sForm">
                    <div class="input-group input-group-sm">
                        <input type="text" name="SearchTerm" class="form-control" id="inputsearch" placeholder="Search By Package Name..." />
                        <div class="input-group-append">
                            <button class="btn btn-outline-warning pull-left" type="submit" id="search" value="name"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <a class="btn btn-dark btn-sm hidden" href="/admin/Package/PackageOfferList" id="clear"><i class="fa fa-remove"></i> Clear</a>
                <a class="btn btn-primary btn-sm pull-right" href="/admin/Package/AddPackageOffer"><i class="fa fa-plus-circle"></i> Add</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("_pvPackageOfferList", Model)
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function (e) {
            $("#search").on("click", function (e) {
                if ($("#inputsearch").val() != "") {
                    $("#clear").removeClass("hidden");
                }
                else {
                    $("#clear").addClass("hidden");
                }
            });
        });
    </script>
}
