@model System.Web.Mvc.HandleErrorInfo
@{
    Response.StatusCode = (int)ViewBag.StatusCode;
    Layout = null;
}
<html>
<head>
    <title>Error</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="text-center" style="margin-top:150px;">
            <div>
                <i class="fa fa-exclamation-circle text-danger fa-5x"></i>
            </div>
            <div>
                <h2 class="text-danger">
                    Error
                </h2>
                <h5 class="mt-3">
                    An error occurred in this page. The error has been recorded and the site administrator informed.
                </h5>
                <span> &larr; Return To<a href="/home"> Home </a></span>
            </div>
        </div>
    </div>
</body>
</html>
