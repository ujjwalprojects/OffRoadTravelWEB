                        <div class="quick-contact ">
                            <h3>Book This Tour</h3>
                            <form method="post" action="/GenTourPackage/SubmitDirectBooking">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.GenTourPackageDtlView.PackageID)
