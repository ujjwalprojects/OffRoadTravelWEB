                    @*inclusion/exclusion/terms section*@
                    <div class="tabs">
                        <input type="radio" id="tab1" name="tab-control" checked>
                        <input type="radio" id="tab2" name="tab-control">
                        <input type="radio" id="tab3" name="tab-control">
                        <input type="radio" id="tab4" name="tab-control">
                        <ul>
                            <li title="Features">
                                <label for="tab1" role="button">
                                    <i class="fa fa-check-circle"></i>
                                    <br>
                                    <span>What´s Included</span>
                                </label>
                            </li>
                            <li title="Delivery Contents">
                                <label for="tab2" role="button">
                                    <i class="fa fa-close"></i>
                                    <br>
                                    <span>Exclusions</span>
                                </label>
                            </li>
                            <li title="Shipping">
                                <label for="tab3" role="button">
                                    <i class="fa fa-file-text-o"></i>
                                    <br>
                                    <span>Terms & Conditions</span>
                                </label>
                            </li>
                            <li title="Returns">
                                <label for="tab4" role="button">
                                    <i class="fa fa-info"></i>
                                    <br>
                                    <span>Cancel Policy</span>
                                </label>
                            </li>
                        </ul>

                        <div class="slider"><div class="indicator"></div></div>
                        <div class="content">
                            <section>
                                <h2>What´s Included</h2>
                                <div class="boxcontent">
                                    <ul>

                                        @if (Model.Inclusions != null)
                                        {
                                            foreach (var item in Model.Inclusions)
                                            {
                                                <li><i class="fa fa-caret-right"></i> @item.InclusionName</li>
                                            }

                                        }
                                        else
                                        {
                                            <li>NA</li>
                                        }
                                    </ul>
                                </div>
                            </section>
                            <section>
                                <h2>Exclusions</h2>
                                <div class="boxcontent">
                                    <ul>
                                        @if (Model.Exclusions != null)
                                        {
                                            foreach (var item in Model.Exclusions)
                                            {
                                                <li><i class="fa fa-caret-right"></i> @item.ExclusionName</li>
                                            }
                                        }
                                        else
                                        {
                                            <li>NA</li>
                                        }
                                    </ul>
                                </div>
                            </section>
                            <section>
                                <div class="boxcontent">
                                    <h2>Terms & Conditions</h2>
                                    <ul>
                                        @if (Model.Terms.Count() > 0)
                                        {
                                            foreach (var item in Model.Terms)
                                            {
                                                <li><i class="fa fa-caret-right"></i> @item.TermName</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </section>
                            <section>
                                <h2>Cancellation Policy</h2>
                                <ul>
                                    @if (Model.Cancel.Count() > 0)
                                    {
                                        foreach (var item in Model.Cancel)
                                        {
                                            <li><i class="fa fa-caret-right"></i> @item.CancellationDesc</li>
                                        }
                                    }
                                </ul>

                            </section>
                        </div>
                    </div>
