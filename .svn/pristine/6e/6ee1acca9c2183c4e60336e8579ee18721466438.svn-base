@model TourTravel_Web.CustomModels.GenTourPackageAPIVM
@{
    ViewBag.Title = "Tour Package Details";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}
@{
    var last = Model.Itineraries.Last();
    var first = Model.Itineraries.First();
}
@{
    List<TourTravel_Web.CustomModels.GenTourPackageImage> banners = new List<TourTravel_Web.CustomModels.GenTourPackageImage>();
    int bannerCount = 0;
    if (Model.GalleryImage != null)
    {
        banners = (List<TourTravel_Web.CustomModels.GenTourPackageImage>)Model.GalleryImage;
        bannerCount = banners.Count();
    }
}
<link href="~/Content/timeline.css" rel="stylesheet" />
<link href="~/Content/datetimepicker/jquery.datetimepicker.min.css" rel="stylesheet" />
<link href="~/Content/Select2/select2.min.css" rel="stylesheet" />
<style>
    /* Make the image fully responsive */
    /*.carousel-inner img {
        width: 800px;
        height: 520px;
    }*/
    .w-0 {
        width: 0% !important;
    }

    .display-price {
        font-size: 18px;
        font-weight: bold;
    }
    .display-6 {
        font-size: 2.5rem;
        font-weight: 500;
        line-height: 1.5;
    }
</style>

<!-- Tour Details Area Start -->
<section class="peulis-tour-details-area section_70">
    <div class="container">
        @*<div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="tour-details-left">
                    <div class="tour-details-head p-2">
                        <h5>@Model.GenTourPackageDtlView.PackageName <span class="tour_price"> | Customizable</span></h5>
                    </div>
                </div>
            </div>
        </div>*@
        <div class="row">
            <div class="col-lg-8 col-sm-8 col-xl-8">
                <div class="tour-details-left">
                    <div class="tour-details-head">
                        @*<h3>@Model.GenTourPackageDtlView.PackageName</h3>
                        <div class="tour-rating">
                                <ul>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                </ul>
                                <p>(2 Review) </p>
                            </div>*@
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < bannerCount; i++)
                            {
                                if (i == 0)
                                {

                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                }
                            }
                        </ol>
                        <div class="carousel-inner">
                            @for (int i = 0; i < bannerCount; i++)
                            {
                                if (i == 0)
                                {

                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="@banners.ElementAt(i).PhotoNormalPath" alt="@banners.ElementAt(i).PhotoCaption">
                                        <div class="carousel-caption">
                                            <h5>@banners.ElementAt(i).PhotoCaption</h5>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="@banners.ElementAt(i).PhotoNormalPath" alt="@banners.ElementAt(i).PhotoCaption">
                                        <div class="carousel-caption">
                                            <h5>@banners.ElementAt(i).PhotoCaption</h5>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <div class="mt-3">
                        <span class="text-primary">@Model.GenTourPackageDtlView.Days Days / @Model.GenTourPackageDtlView.Nights Nights</span><br />
                        <span class="display-6 text-dark">@Model.GenTourPackageDtlView.PackageName</span>
                    </div>
                    <div class="book-tour-field small">
                        <i class="fa fa-inr"></i>&nbsp;&nbsp;<span class="text-dark font-weight-bold display-price" id="pack-price">@Model.GenTourPackageDtlView.FinalFare.ToString("0")</span>  /- per @Model.GenTourPackageDtlView.FarePer
                    </div>
                    <div class="book-tour-field clearfix mt-3">
                        <label class="mb-0"><i class="fa fa-building"></i>&nbsp;&nbsp;&nbsp; Choose Your Hotel Stay :</label><br />
                        @foreach (var item in Model.HotelTypes)
                        {
                            <label class="small pr-4 text-dark">
                                @Html.RadioButtonFor(m => m.ClientEnquiry.HotelTypeID, item.HotelTypeID, new { @class = "w-0 rbHotel", data_price = item.BaseFare }) @item.HotelTypeName &nbsp;&nbsp;
                            </label>
                        }
                        @Html.ValidationMessageFor(model => model.ClientEnquiry.HotelTypeID)
                    </div>
                    <div class="book-tour-field clearfix">
                        <label class="mb-0"><i class="fa fa-cab"></i>&nbsp;&nbsp;&nbsp; Choose Your Transport Type :</label><br />
                        @foreach (var item in Model.CabTypes)
                        {
                            <label class="small pr-4 text-dark">
                                @Html.RadioButtonFor(m => m.ClientEnquiry.CabTypeID, item.CabTypeID, new { @class = "w-0 rbCab", data_price = item.BaseFare }) @item.CabTypeName &nbsp;&nbsp;
                            </label>
                        }
                        @*@Html.DropDownListFor(model => model.ClientEnquiry.CabTypeID, new SelectList(Model.CabTypes, "CabTypeID", "CabTypeName"), "Preferred Cab Type", new { id = "CabType", @class = "wide dd-select" })*@
                        @Html.ValidationMessageFor(model => model.ClientEnquiry.CabTypeID)
                    </div>
                   
                    <h4 class="pb-3 pt-3">Overview</h4>
                    <p>@Model.GenTourPackageDtlView.PackageDesc</p>
                    <ul class="tour-offer clearfix pl-0 ml-0">
                        <li><span>Route </span>@Model.GenTourPackageDtlView.PackageRouting</li>
                        <li><span>PickUp Point </span>@Model.GenTourPackageDtlView.PickupPoint</li>
                        <li><span>Drop Point</span>@Model.GenTourPackageDtlView.DropPoint</li>
                        <li><span>Accommodation </span>All Inclusive</li>
                    </ul>


                    <div class="row">

                        <div class="col-md-12 col-lg-12">
                            <div id="tracking-pre"></div>
                            <div id="tracking">
                                <div class="text-center tracking-status-intransit">
                                    <p class="tracking-status text-tight">Itinerary</p>
                                </div>
                                <div class="tracking-list">

                                    @foreach (var item in Model.Itineraries)
                                    {
                                        <div class="tracking-item">
                                            <div class="tracking-icon status-intransit">
                                                @item.DayNo
                                            </div>
                                            <div class="tracking-date">Day </div>
                                            <div class="tracking-content">
                                                @item.ItineraryName
                                                <ul class="package-tags">
                                                    @if (item.Equals(first))
                                                    {
                                                        <li>
                                                            <img src="~/Content/img/ItineraryIcon/land.png" /> Arrival
                                                        </li>
                                                    }
                                                </ul>

                                                <div class="tracking-title mb-4">
                                                    Other Benefits (On Arrival)
                                                    <div class="row ml-2">
                                                        @if (item.Breakfast == true)
                                                        {
                                                            <div class="css-1hrscrw clearfix relative">
                                                                <span class="">
                                                                    <span class="css-g71760">
                                                                        <img src="~/Content/img/ItineraryIcon/food.png" />
                                                                    </span>
                                                                    <span class="inclusionName">Breakfast</span>
                                                                </span>
                                                            </div>
                                                        }
                                                        @if (item.Lunch == true)
                                                        {
                                                            <div class="css-1hrscrw clearfix relative">
                                                                <span class="">
                                                                    <span class="css-g71760">
                                                                        <img src="~/Content/img/ItineraryIcon/food.png" />
                                                                    </span>
                                                                    <span class="inclusionName">Lunch</span>
                                                                </span>
                                                            </div>
                                                        }
                                                        @if (item.Dinner == true)
                                                        {
                                                            <div class="css-1hrscrw clearfix relative">
                                                                <span class="">
                                                                    <span class="css-g71760">
                                                                        <img src="~/Content/img/ItineraryIcon/food.png" />
                                                                    </span>
                                                                    <span class="inclusionName">Dinner</span>
                                                                </span>
                                                            </div>
                                                        }
                                                        @if (item.SightSeeing == true)
                                                        {
                                                            <div class="css-1hrscrw clearfix relative">
                                                                <span class="">
                                                                    <span class="css-g71760">
                                                                        <img src="~/Content/img/ItineraryIcon/eye.png" />
                                                                    </span>
                                                                    <span class="inclusionName">Sight Seeing</span>
                                                                </span>
                                                            </div>
                                                        }
                                                        @if (item.Stay == true)
                                                        {
                                                            <div class="css-1hrscrw clearfix relative">
                                                                <span class="">
                                                                    <span class="css-g71760">
                                                                        <img src="~/Content/img/ItineraryIcon/bed.png" />
                                                                    </span>
                                                                    <span class="inclusionName">Stay</span>
                                                                </span>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                                <span>@item.ItineraryRemarks</span>
                                                <div class="tracking-title mt-4">Overnight Destination: @item.DestinationName</div>
                                                <ul class="package-tags">
                                                    @if (item.Equals(last))
                                                    {
                                                        <li>
                                                            Departure
                                                            <img src="~/Content/img/ItineraryIcon/take-off.png" />
                                                        </li>
                                                    }
                                                </ul>
                                            </div>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
