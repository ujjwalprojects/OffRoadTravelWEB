@section scripts{
    <script src="~/Content/Select2/select2.min.js"></script>
    <script src="~/Content/datetimepicker/jquery.datetimepicker.full.min.js"></script>
    <script type="text/javascript">
        var fare = '@Model.GenTourPackageDtlView.FinalFare';

        $('.rbHotel').on('change', function () {
            setprice();
        });
        $('.rbCab').on('change', function () {
            setprice();
        });

        $('.dd-select').select2({
            width: '100%',
        });
        $('#reservation_date').datetimepicker({
            theme: 'light',
            timepicker: false,
            format: 'd M Y',
            minDate: 'today'
        });

        function setprice() {
            var hotelfare = $('.rbHotel:checked').attr('data-price');
            var cabfare = $('.rbCab:checked').attr('data-price');

            var hfare = parseInt(hotelfare) || 0;
            var cfare = parseInt(cabfare) || 0;

            var final = parseInt(fare) + hfare + cfare;
            $('#pack-price').text(final);
        }
    </script>
}
