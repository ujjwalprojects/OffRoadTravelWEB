@model IEnumerable<TourTravel_Web.Areas.Admin.CustomModels.StateView>
<div id="DataGrid">
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center" style="vertical-align:middle">
                            Country
                        </th>
                        <th class="text-center" style="vertical-align:middle">
                            State
                        </th>
                        <th class="text-center" style="vertical-align:middle">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td class="action-td">
                                <div class="flexbox">
                                    <div class="plr-5">
                                        <a href="/admin/states/edit/@item.StateID" title="Edit">
                                            <i class="fa fa-edit text-dark"></i>
                                        </a>
                                    </div>
                                    <div class="plr-5">
                                        <form method="post" action="/admin/states/delete" data-otf-ajax="true" data-otf-target="#DataGrid">
                                            @Html.Hidden("id", item.StateID)
                                            @Html.AntiForgeryToken()
                                            <a href="/admin/states/delete/@item.StateID" class="delete" title="Delete" data-record="@item.StateName">
                                                <i class="fa fa-trash text-dark"></i>
                                            </a>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center">
            <img src="~/Content/img/no_record.png" /><br />
            <span class="text-muted">No records available or your searched record in not available..</span>
        </div>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
