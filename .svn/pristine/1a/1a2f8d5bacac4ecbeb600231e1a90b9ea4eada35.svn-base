@model TourTravel_Web.Areas.Admin.CustomModels.TourPackageImageVM
@{
    ViewBag.Title = "Package Images";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-div">
    <i class="fa fa-hand-o-right"></i>&nbsp;
    <span class="title">Tour Package - Images</span>&nbsp;
    <small>Step 3 of 5</small>
</div>
<div class="card bg-light">
    <div class="card-header bg-head">
        <div class="pb-2">
            <span class="display-5 text-white">@Model.Package.PackageName</span> &nbsp;&nbsp;<b class="text-muted">@Model.Package.TotalDays&nbsp;Days/@(Model.Package.TotalDays - 1)&nbsp;Nights</b>
        </div>
    </div>
    <div class="card-body">
        <div>
            <a class="btn btn-primary btn-sm pull-right" href="/admin/tourpackage/addimage?PackageID=@Model.Package.PackageID"><i class="fa fa-plus-circle"></i> Add Image</a>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("_pvImageList", Model)
    </div>
</div>
