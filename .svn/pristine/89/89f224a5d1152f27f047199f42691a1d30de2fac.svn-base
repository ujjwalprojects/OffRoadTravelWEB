@model TourTravel_Web.Areas.Admin.CustomModels.ActivityManageModel
@{
    ViewBag.Title = "AddActivity";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-div">
    <i class="fa fa-hand-o-right"></i>&nbsp;
    <span class="title">Activities</span>&nbsp;
    <small>Add</small>
</div>
<div class="card bg-light">
    <div class="card-body">
        <div class="text-center">
            <label class="alert alert-info p-2"><small> Fields marked * are mandatory</small></label>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Activity.DestinationID, new { @class = "required" })
                        @Html.DropDownListFor(m => m.Activity.DestinationID, new SelectList(Model.Destinations, "DestinationID", "DestinationName"), "-- Select Destination --", new { @class = "form-control", @id = "destdd" })
                        @Html.ValidationMessageFor(m => m.Activity.DestinationID)
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Activity.ActivityName, new { @class = "required" })
                <div class="col-md p-0">
                    @Html.TextBoxFor(m => m.Activity.ActivityName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Activity.ActivityName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Activity.BaseFare, new { @class = "required" })
                <div class="col-md p-0">
                    @Html.TextBoxFor(m => m.Activity.BaseFare, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Activity.BaseFare)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Activity.ActivityDesc, new { @class = "required" })
                <div class="col-md p-0">
                    @Html.TextAreaFor(m => m.Activity.ActivityDesc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Activity.ActivityDesc)
                </div>
            </div>
            <div class="action-div">
                @Html.ActionLink("Back To List", "ActivityList", "activity", new { Area = "Admin" }, new { @class = "btn btn-secondary btn-sm" })
                <button type="submit" class="btn btn-sm btn-primary pull-right"><i class="fa fa-save"></i> Save</button>
            </div>
        }
    </div>
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

