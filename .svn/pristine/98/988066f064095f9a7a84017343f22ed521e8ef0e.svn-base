@model TourTravel_Web.Areas.Admin.CustomModels.BannerVM
@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-div">
    <i class="fa fa-hand-o-right"></i>&nbsp;
    <span class="title">Banner</span>&nbsp;
    <small>List</small>
</div>
<div class="card bg-light">
    <div class="card-body">
        <div class="row">

            <div class="col-md-12">
                <a class="btn btn-primary btn-sm pull-right" href="/admin/banner/addbanner"><i class="fa fa-plus-circle"></i> Add</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("_pvBannerList", Model)
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function (e) {
            $("#search").on("click", function (e) {
                if ($("#inputsearch").val() != "") {
                    $("#clear").removeClass("hidden");
                }
                else {
                    $("#clear").addClass("hidden");
                }
            });
        });
    </script>
}


